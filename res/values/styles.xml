<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="WidgetText">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">@dimen/text_size_small</item>
  </style>

  <style name="BodyText">
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>

  <style name="MainTheme" parent="android:Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/FlatActionBar</item>
  </style>

  <style name="FlatActionBar"
         parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@null</item>
    <item name="android:titleTextStyle">@style/RedTitleTextStyle</item>
  </style>

  <style name="RedTitleTextStyle">
    <item name="android:textColor">@color/red_accent</item>
    <item name="android:textSize">@dimen/text_size_medium</item>
  </style>

  <style name="StandardContainer">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingLeft">@dimen/grid_b_3</item>
    <item name="android:paddingRight">@dimen/grid_b_3</item>
  </style>

</resources>
